<Container>:
    name: 'MainContainer'
    conversation_text: _label_conversation
    input_text: _label_input
    version_text: _label_version
    #spinner: _spinner
    
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 100
        Toolbar:
            id: toolbar
            title: 'Clara'
            md_bg_color: app.theme_cls.primary_color
            background_palette: 'Primary'
            background_hue: '500'
            left_action_items: [['menu', lambda x: app.quit_button_pressed()], ["microphone", lambda x: app.quit_button_pressed()]]
            right_action_items: [['exit-to-app', lambda x: app.quit_button_pressed()]]
        

    BoxLayout:  
        size_hint_y: 200
        # MDSpinner:
        #     id: _spinner
        #     #size_hint: None, None
        #     #size_x: "10dp"
        #     #size_y: "10dp"
        #     #pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        #     active: True
        #     width: "50px"
        #     #size_hint_x: 7  
        
        MDLabel:
            font_style: 'Body1'
            theme_text_color: 'Primary'
            text: ""    
            size_hint_x: 7         

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 200
        MDLabel:
            id: _label_conversation
            font_style: 'Body1'
            theme_text_color: 'Primary'
            text: "How can I help?"
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            font_size: "20sp"
            halign: "center"
            size_hint_x: 7

    BoxLayout:  
        size_hint_y: 260 
        MDLabel:
            font_style: 'Body1'
            theme_text_color: 'Primary'
            text: ""    
            size_hint_x: 1  
        MDTextField:
            id: _label_input
            hint_text: "Input"
            font_style: 'Body1'
            #text_size: self.size
            font_size: "20sp"
            #pos_hint: {'center_x': 0.5, 'center_y': 0.5}                      
            size_hint_x: 5
        MDLabel:
            font_style: 'Body1'
            theme_text_color: 'Primary'
            text: ""    
            size_hint_x: 1

    BoxLayout:  
        size_hint_y: 40      
        MDLabel:
            id: _label_version
            font_style: 'Body1'
            theme_text_color: 'Secondary'
            text: "Clara"    
            size_hint_x: 7
            halign: "right"

 